@using System.Web.Mvc.Html
@using GameHUB.Business.Twitch
@model GameHUB.Models.ViewModels.PageViewModel<GameHUB.Models.Commerce.GameProduct>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h1> @Model.CurrentContent.Name</h1>
    <h4> @Model.CurrentContent.SeoInformation.Description</h4>
    <img src="@Url.ContentUrl(Model.CurrentContent.Image)" alt="GameImage"/>
    <ul>
        @foreach (var genre in Model.CurrentContent.GenreList)
        {
            <li>@genre</li>
        }
    </ul>
    
    @Html.Partial("Blocks/_Twitch", TwitchUtils.ChannelByGameTitle(Model.CurrentContent.Name))

</div>


